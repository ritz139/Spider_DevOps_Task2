#3 parameters are passed
#first is patient's name p1, p2 .. p10
#second is doc1 or doc2
#third is x, where x is integer greater than 10
j=0
b=$3
for i in {1..1}; do
    until [[ $j -eq 1 ]]
        a=$(ls -l /home/$1/Symptoms/ | grep $b )
        if a;
            then
            b=$((b + 1))
            continue
        else
            echo $b >> /home/$2/Request/$1.txt
            echo $b >> /home/$1/Symptoms/Symptom_$b.txt
        fi
    done
done